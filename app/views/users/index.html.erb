<%= render 'messages/messages' %>

<h1>KOpiskelijoiden tiedot</h1>

<% @exercises.each do |exercise| %>
  <div class = "row">
    <div class = "col-md-12">
      <h3><%= exercise.name %></h3>
    </div>
    <div class = "col-md-12">

      <table>
        <thead>
        <tr>
          <th>Käyttäjä</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.username, user %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
<% end %>



