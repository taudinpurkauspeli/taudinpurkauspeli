<%= render 'messages/messages' %>

<br/>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default panel-grey">
        <div class = "panel-heading panel-heading-grey">
          <div class="row">

            <div class="col-md-6">
              <h3>Muokkaa diagnoositoimenpidett√§</h3>
            </div>

            <div class = "col-md-6">
              <%= button_to 'Poista', @conclusion, :class => 'btn btn-default btn-del widthAuto floatRight margin-em', :form => {id: "form-delete-conclusion"}, :method => :delete, data: { confirm: 'Haluatko varmasti poistaa diagnoositoimenpiteen?' } %>
              <%= button_to 'Esikatsele', @task, :class => 'btn btn-default widthAuto floatRight margin-em',:form_class => "form-show-task", :method => :get %>

            </div>
          </div>

        </div>

        <div class="panel-body">
          <%= render 'form' %>

        </div>
      </div>
    </div>
  </div>
</div>


<script>
    setAjaxSubmits("#currentTaskTab form:not(#form-delete-conclusion, .form-show-task)", "#currentTaskTab", "post", function(){
        loadView("/tasks", "#taskTab");
        loadView("/hypotheses", "#hypothesisTab");
    });
    setAjaxSubmits("#currentTaskTab #form-delete-conclusion", "#taskTab", "post", function(){
        showTab("#taskTab");
        closeTab("#currentTaskTab");
        loadView("/hypotheses", "#hypothesisTab");
    });

    setAjaxSubmits("#currentTaskTab .form-show-task", "#currentTaskTab", "get");
</script>