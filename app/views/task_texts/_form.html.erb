<%= form_for(@task_text) do |f| %>
    <% if @task_text.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('activerecord.errors.template.header')%></h2>

          <ul>
            <% @task_text.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :content%><br>
      <%= f.text_area :content, placeholder: "Sisältö", :class => 'form-control', :rows => '10' %>
    </div>
    <div class="field">
      <%= image_tag @task_text.image.picture.url(:thumb) unless @task_text.image.nil? %>
      <%=f.select :image_id, options_from_collection_for_select(Image.all, :id, :name, selected: @task_text.image_id), { :prompt => 'Valitse kuva' } %>
    </div>
    <br>

    <div class="actions">
      <%= f.submit "Tallenna", :class => "btn btn-default btn-save widthAuto" %>
    </div>
<% end %>
