<h1>Diffiryhmähaku</h1>

<article ng-app="taudinpurkauspeli">
  <article ng-controller="HypothesisGroupSearchController">
    <br/>
    <div class="search-form">
      <form>
        <label for="hypothesis-group-name">Hakusanat</label>
        <div class="input-group">
          <input type="text"
                 name="hypothesis-group-name"
                 class="form-control"
                 placeholder="Diffiryhmän nimi"
                 ng-model="hypothesisGroupName">
        <span class="input-group-btn">
        <button class="btn btn-primary"
                ng-click="search(hypothesisGroupName)">
          Etsi diffiryhmä
        </button>
        </span>
        </div>
      </form>
    </div>
    <h1 ng-if="searchedHypothesisGroup">
      <small>Hait diffiryhmää:</small> {{searchedHypothesisGroup}}
    </h1>
  </article>
</article>