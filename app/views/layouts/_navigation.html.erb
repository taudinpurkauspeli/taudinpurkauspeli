<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% unless @excercise_page_rendered or current_page?( new_user_path) %>
            <%= render 'layouts/navigation_links' %>
        <% end %>
      </ul>
    </div>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% unless @excercise_page_rendered %>
          <%= link_to 'Palaa pääsivulle', root_path, class: 'navbar-brand' %>
      <% end %>

    </div>
  </div>

  <% if @excercise_page_rendered or !current_user.nil?%>
      <div class="login-container">
        <% if current_user.nil? %>
            <div class="row">

              <%= form_tag sessions_path do %>
                  <div class="col-md-3">
                    <%= text_field_tag :username, params[:username], placeholder: 'Käyttäjätunnus', :class => 'width100' %>
                  </div>
                  <div class="col-md-3">
                    <%= password_field_tag :password, params[:password], placeholder: 'Salasana', :class => 'width100' %>
                  </div>
                  <div class="col-md-3">
                    <%= submit_tag "Kirjaudu sisään", :class => 'btn btn-default btn-signup' %>
                  </div>
              <% end %>

              <div class="col-md-3">
                <%= button_to 'Luo uusi tunnus', new_user_path, :class => 'btn btn-default btn-signup', :method => :get %>
              </div>
            </div>
        <% else %>
            <%= button_to 'Kirjaudu ulos', '/signout', :class => 'btn btn-default btn-logout', :method => :delete unless current_user.nil?%>
        <% end %>
      </div>

  <% end %>
</nav>
