<%= form_for(@multichoice) do |f| %>
    <% if @multichoice.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('activerecord.errors.template.header')%></h2>

          <ul>
            <% @multichoice.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :question%><br>
      <%= f.text_field :question, placeholder: "Kysymys", :class => "form-control widthAuto" %>
    </div>
    <br>

    <div class="field">
      <%= f.label :is_radio_button%><br />
      <% if @multichoice.options.where(is_correct_answer: true).size > 1 %>
          <%= f.check_box :is_radio_button, :disabled => true %> <span>(Jätä vain yksi oikea vaihtoehto vaihtaaksesi tyyppi radio buttoniin.)</span>
      <% else %>
          <%= f.check_box :is_radio_button %>
      <% end %>
    </div>
    <br>

    <div class="actions">
      <%= f.submit :class => 'btn btn-default btn-save widthAuto'%>
    </div>
<% end %>
