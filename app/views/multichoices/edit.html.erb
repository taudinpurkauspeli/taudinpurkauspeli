<%= render 'form' %>

<% @multichoice.options.each do |option| %>
    <%= button_to 'Vastausvaihtoehto', edit_option_path(option), :class => 'btn btn-default btn-exercise', :method => :get %>
<% end %>


<input class="btn btn-default btn-hypothesis btn-save" type="button" value="Uusi vastausvaihtoehto" data-toggle="collapse" data-target="#new-option"/>


<div class="collapse in" id="new-option">
 <%= form_for(@new_option) do |f| %>
 			<%= f.label :content %>
 			<%= f.text_field :content %>

 			<%= f.label :explanation %>
 			<%= f.text_field :explanation %>

 			<%= f.label :value %>
 			<%= f.check_box :value, :value => true %>

            <%= f.hidden_field :multichoice_id, :value => @multichoice.id %>
            <%= f.submit 'Tallenna', :class => 'btn btn-default btn-hypothesis' %>
          <% end %>

      </div>