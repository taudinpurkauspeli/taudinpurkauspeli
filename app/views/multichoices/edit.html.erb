<h1>Muokkaa monivalintakysymyst√§</h1>

<%= render 'form' %>

<% @multichoice.options.each do |option| %>

    <input class="btn btn-default btn-hypothesis" type="button" value="<%= option.content %>" data-toggle="collapse" data-target="#collapse-option-edit<%= option.id %>" />

    <div class="collapse" id="collapse-option-edit<%= option.id %>">

      <%= form_for(option) do |f| %>
          <%= f.hidden_field :multichoice_id, :value => @multichoice.id%>
          <%= f.hidden_field :option_id, :value => option.id %>
          <%= f.text_area :content, placeholder: "Vastausvaihtoehto", :class => 'width100' %>
          <%= f.text_area :explanation, placeholder: "Selite", :class => 'width100' %>
          <%= f.submit :class => 'btn btn-default btn-save width50' %>
      <% end %>
      <%= button_to 'Poista vastausvaihtoehto', option, method: :delete, :class => 'btn btn-default btn-del width50' %>
    </div>
<% end %>


<input class="btn btn-default btn-hypothesis btn-save" type="button" value="Uusi vastausvaihtoehto" data-toggle="collapse" data-target="#new-option"/>


<div class="collapse in" id="new-option">

  <%= form_for(@new_option) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.label :explanation %>
      <%= f.text_field :explanation %>

      <%= f.label :value %>
      <%= f.check_box :value, :value => true %>

      <%= f.hidden_field :multichoice_id, :value => @multichoice.id %>
      <%= f.submit 'Tallenna', :class => 'btn btn-default btn-hypothesis' %>
  <% end %>

</div>