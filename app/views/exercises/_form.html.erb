<%= form_for(@exercise) do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header')%></h2>

      <ul>
      <% @exercise.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name%><br>
    <%= f.text_area :name, placeholder: "Sisältö", :class => 'width100', :rows => '1' %>
  </div>

  <div class="field">
    <%= f.label :anamnesis%><br>
    <%= f.text_area :anamnesis, placeholder: "Anamneesi", :class => 'width100', :rows => '10' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Tallenna", :class => "btn btn-default btn-save widthAuto"%>
  </div>
<% end %>
