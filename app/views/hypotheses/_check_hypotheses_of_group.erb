
<% @exercise.get_hypotheses[group.id].to_a.each do |exercise_hypothesis| %>
    <div class="row">
      <div class="col-md-1"></div>

      <% if current_user.has_checked_hypothesis?(exercise_hypothesis) %>
          <% checked_hypothesis = current_user.get_checked_hypothesis(exercise_hypothesis) %>
          <div class="col-md-8">
            <%= button_to checked_hypothesis.hypothesis.name, checked_hypothesis, method: :delete, :class => 'btn btn-default btn-checked multiline', :id => "checked_hypothesis_"+checked_hypothesis.id.to_s %>
          </div>
          <% if @last_clicked_hypothesis_id == checked_hypothesis.exercise_hypothesis.id.to_s %>
              <div class = "col-md-1">
                <div class="info-checked-hypothesis removable"><%= checked_hypothesis.get_explanation %></div>
              </div>
          <% end %>
      <% else %>

          <div class="col-md-8">
            <%= form_for(@new_checked_hypothesis) do |f| %>
                <%= f.hidden_field :exercise_hypothesis_id, :value => exercise_hypothesis.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.submit exercise_hypothesis.hypothesis.name, :class => 'btn btn-default btn-save multiline' %>
            <% end %>
          </div>
          <% if @last_clicked_hypothesis_id == exercise_hypothesis.id.to_s %>
              <div class = "col-md-1">
                <div class="alert-unchecked-hypothesis removable"><%= alert %></div>
              </div>
          <% end %>
      <% end %>
    </div>
<% end %>
