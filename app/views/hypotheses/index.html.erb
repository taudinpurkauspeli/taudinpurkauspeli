<p id="notice"><%= notice %></p>

<h1>Työhypoteesilista</h1>

<table>
  <thead>
    <tr>
      <th>Nimi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hypotheses.each do |hypothesis| %>
      <tr>
        <td><%= hypothesis.name %></td>
        <td><%= link_to 'Näytä', hypothesis %></td>
        <td><%= link_to 'Muokkaa', edit_hypothesis_path(hypothesis) %></td>
        <td><%= link_to 'Poista', hypothesis, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Luo uusi työhypoteesi', new_hypothesis_path %>
