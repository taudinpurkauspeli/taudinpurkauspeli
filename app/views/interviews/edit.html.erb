<%= render 'messages/messages' %>

<div class = "row">
	<div class = "col-md-8">
		<h1>Muokkaa pohdintatehtävää</h1>
	</div>
	<div class = "col-md-4">
		<%= render 'general_partials/back_to_task_button' %>
	</div>
</div>

<div class = "panel panel-default panel-grey">
  <div class = "panel-heading panel-heading-grey">
    Pohdinnan perustiedot
  </div>
  <div class = "panel-body">
    <%= render 'form' %>
  </div>
</div>

<h1>Kysymykset</h1>

<% @interview.questions.each do |question| %>
  <%= render 'edit_question', { question:question } %>
<% end %>
<%= render 'new_question' %>

<script>
	setAjaxSubmits("#currentTaskTab form:not(.form-edit-task)", "#currentTaskTab", "post");

	setAjaxSubmits("#currentTaskTab .form-edit-task", "#currentTaskTab", "get");
</script>