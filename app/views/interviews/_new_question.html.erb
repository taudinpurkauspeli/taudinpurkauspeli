<div class = "panel panel-default panel-green width70">
  <%= form_for(@new_question, :html => {:id => "form-new-question", :class=> "rich-text-form"}) do |f| %>
  <div class = "panel-heading panel-heading-grey">

    <div class="row">
      <div class="col-md-6">
        <h5> Lisää kysymys</h5>
      </div>
      <div class="col-md-6">
        <%= f.submit 'Tallenna', :class => 'btn btn-default btn-save floatRight widthAuto margin-em' %>
      </div>
    </div>
  </div>

  <div class="row panel-body">
    <div class = "container-fluid">
      <div class="row">
        <div class="col-md-12">
 <%=f.select :required, options_for_select(@requireds.collect { |answer| [t("activerecord.attributes.question.requireds.#{answer[0]}"), answer[0]] } ), {}, {:id => "required_" + @new_question.id.to_s, class: "form-control"}%><br>

          <%= f.text_area :title, placeholder: "Vaihtoehto", :class => 'form-control' %><br>

          <%= f.cktext_area :content, placeholder: "Vastausteksti", :class => 'form-control', :ckeditor => {:toolbar => 'minimalist', :height => 200} %>
        <br>
          <%= f.text_area :question_group, placeholder: "Kysymysryhmä", :class => 'form-control' %><br>

        </div>
        <%= f.hidden_field :interview_id, :value => @interview.id %>
      </div>
    </div>
  </div>

  <% end %>
</div>
