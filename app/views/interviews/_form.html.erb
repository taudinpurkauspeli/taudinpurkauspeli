<%= form_for(@interview) do |f| %>
  <% if @interview.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header')%></h2>

      <ul>
      <% @interview.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title%><br>
    <%= f.text_area :title, placeholder: "Haastattelun otsikko", :class => 'form-control' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Tallenna", :class => "btn btn-default btn-save widthAuto" %>
  </div>
<% end %>
