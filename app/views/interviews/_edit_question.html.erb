<div class = "panel panel-default panel-grey">
  <div class="row panel-body">
    <div class = "row panel-body">

      <%= form_for(question, :html => {:id => "form-edit-question-" + question.id.to_s , :class=> "rich-text-form"}) do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :question_group_id %>
          <%= f.text_field :question_group_title, placeholder: "Ei ryhmää", :value => (question.question_group.title unless question.question_group.nil?), :class => 'width100' %>
        </div>
      </div>
      <div class="col-md-2">
        <%= f.label :required%><br>
        <%=f.select :required, options_for_select(@requireds.collect { |answer| [t("activerecord.attributes.question.requireds.#{answer[0]}"), answer[0]] }, selected: question.required), {}, {:id => "required_" + question.id.to_s, class: "form-control"} %><br>
      </div>
      <div class="col-md-3">
        <%= f.label :title%>
        <%= f.text_area :title, placeholder: "Kysymys", :class => 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= f.label :content%>
        <%= f.cktext_area :content, placeholder: "Vastausteksti", :class => 'form-control', :id => "content_" + question.id.to_s, :ckeditor => {:toolbar => 'minimalist', :height => 200} %>
      </div>
      <div class="col-md-2">
        <%= image_tag question.image.picture.url(:thumb) unless question.image.nil? %>
        <%=f.select :image_id, options_from_collection_for_select(Image.all, :id, :name, selected: question.image_id), { :prompt => 'Valitse kuva' }, { class: "form-control"} %>

      </div>
      <div class="col-md-1">
        <%= f.submit :class => 'btn btn-default btn-save' %>
      </div>
      <%= f.hidden_field :question_id, :value => question.id %>
      <%= f.hidden_field :interview_id, :value => @interview.id%>
      <% end %>

      <%# Bootsrapin layoutti tekee temppuja, kun rivin leveys yli 12: viimeiset kaksi oudosti päällekkäin %>
      <div class="col-md-1">
        <%= button_to 'Poista', question, method: :delete, :class => 'btn btn-default btn-del' %>
      </div>
    </div>
  </div>
</div>