<%= form_for(@task, :html => {:id => "form-update-task"}) do |f| %>
    <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('activerecord.errors.template.header')%></h2>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row">
      <div class="col-md-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="col-md-2">
        <%= f.submit :class => 'btn btn-default btn-save width100' %>
      </div>
  </div>
<% end %>
