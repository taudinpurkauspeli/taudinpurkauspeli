<p id="notice"><%= notice %></p>

<h1>Toimenpidelista</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<%#
    Available tasks

    TODO Refactor this shiz
%>
    <% @tasks.each do |task| %>
      <% if (current_user.completed_tasks.find_by(task_id: task.id)).nil? %>
        <tr>
          <td><%= button_to task.name, task, method: :get, :class => 'btn btn-default btn-available-task' %></td>
          <% if current_user_is_admin %>
            <td><%= link_to 'Muokkaa', edit_task_path(task) %></td>
            <td><%= link_to 'Poista', task, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
          <%end%>
        </tr>
      <% end %>
    <% end %>

<%#
  Completed tasks
%>
    <% @tasks.each do |task| %>
      <% if !(current_user.completed_tasks.find_by(task_id: task.id)).nil? %>
        <tr>
          <td><%= button_to task.name, task, method: :get, :class => 'btn btn-default btn-completed-task' %></td>
          <% if current_user_is_admin %>
            <td><%= link_to 'Muokkaa', edit_task_path(task) %></td>
            <td><%= link_to 'Poista', task, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
          <%end%>
        </tr>
      <% end %>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'Luo uusi toimenpide', new_task_path if current_user_is_admin%>
