
<p id="notice"><%= notice %></p>
<h1>Toimenpiteet</h1>

<% if current_user_is_admin %>
  <%= render 'set_task_order' %>
<% else %>
  <%= render 'list_of_available_tasks' %>
  <%= render 'list_of_completed_tasks' %>
<% end %>
<%= button_to '+ Luo uusi toimenpide', new_task_path, :class => 'btn btn-default btn-save btn-new-task', :form_class => "form-new-task", :method => :get if current_user_is_admin %>

<script>
	//open task button
	clickToOpenTaskTab("#taskTab .form-button-to-task", "#currentTaskTab");
	//move task up and down buttons
  setAjaxSubmits("#taskTab form:not(.form-button-to-task, .form-new-task)", "#taskTab", "post");
  //new task button
  clickToOpenTaskTab("#taskTab .form-new-task", "#currentTaskTab");
</script>