<p id="notice"><%= notice %></p>

<h1>Toimenpidelista</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= button_to task.name, task, method: :get, :class => 'btn btn-default' %></td>
        <% if current_user_is_admin %>
          <td><%= link_to 'Muokkaa', edit_task_path(task) %></td>
          <td><%= link_to 'Poista', task, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Luo uusi toimenpide', new_task_path if current_user_is_admin%>
