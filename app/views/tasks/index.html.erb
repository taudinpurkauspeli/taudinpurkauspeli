<p id="notice"><%= notice %></p>

<h1>Toimenpidelista</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to 'Näytä', task %></td>
        <td><%= link_to 'Muokkaa', edit_task_path(task) %></td>
        <td><%= link_to 'Poista', task, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Luo uusi toimenpide', new_task_path %>
