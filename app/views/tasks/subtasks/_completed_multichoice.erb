<table class = "width100">
  <tr>
    <td class="multichoice">
      <b>Vaihtoehto</b>
    </td>

    <td class="multichoice">
      <b>Selitys</b>
    </td>

  </tr>

  <% subtask.multichoice.options.each do |option| %>
      <tr>
        <%# TODO this is ugly and the logic should be handled in Option.rb, not here %>
        <td class="multichoice
              <% if option.is_correct_answer == "required" %>
                correct-answer
              <% elsif option.is_correct_answer == "allowed" %>

              <% elsif option.is_correct_answer == "wrong" %>
                wrong-answer
              <% end %>
      ">
          <%= option.content %>
        </td>
        <td class="multichoice
              <% if option.is_correct_answer == "required" %>
                correct-answer
              <% elsif option.is_correct_answer == "allowed" %>

              <% elsif option.is_correct_answer == "wrong" %>
                wrong-answer
              <% end %>
      ">
          <%= image_tag option.image.picture.url(:original) unless option.image.nil? %>
          <%= option.explanation %>
        </td>
      </tr>
  <% end %>
</table>
