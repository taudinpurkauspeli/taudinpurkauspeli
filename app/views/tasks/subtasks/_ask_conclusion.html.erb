<div class="row">
  <div class="row">
    <div class="col-md-6">
      <h4><%= subtask.conclusion.title %></h4>
      <p><%= subtask.conclusion.content.html_safe %></p>

    </div>
    <br>
  </div>
  <div class="row">
    <div class="col-md-4">
      <% if !@wrong_conclusion.nil? %>
          <p><%= @wrong_conclusion.hypothesis.name %></p>
          <p><%= @wrong_conclusion.explanation.html_safe if !@wrong_conclusion.explanation.nil? %>
      <% end %>
    </div>
  </div>

  <div class="col-md-9">
    <% @exercise_hypotheses.each do |exhyp| %>
        <div class="row">
          <div class="col-md-9">
            <% if !current_user.has_checked_hypothesis?(exhyp) %>
                <%= form_tag("conclusions/" + subtask.conclusion.id.to_s + "/check_answers", method: "post", :id => 'check_exhyp_form') do %>
                    <%= hidden_field_tag :exhyp_id, exhyp.id %>
                    <%= submit_tag(exhyp.name, :class => "btn btn-default multiline width95 floatRight") unless current_user.try(:admin) %>
                <% end %>
            <% end %>
          </div>
        </div>
    <%end%>
  </div>
</div>


